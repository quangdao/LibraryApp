<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Add New Member" onAction="#showAddNewMember" />
                    </items>
                    <items>
                        <MenuItem mnemonicParsing="false" text="Add New Book" onAction="#showAddNewBook" />
                    </items>

                    <items>
                        <MenuItem mnemonicParsing="false" text="Search Book" onAction="#showSearchBook" />
                    </items>
                    <items>
                        <MenuItem mnemonicParsing="false" text="Copy Book" onAction="#showCopyBook" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="View">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Checkout Records" onAction="#showCheckoutRecords"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
